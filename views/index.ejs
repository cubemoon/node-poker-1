<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" >
<link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
<script src="/javascripts/jquery-1.9.1.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/javascripts/sha3.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/menu.js"></script>
<script src="/javascripts/client.js"></script>
<title>Poker Texas Hold'em</title>
</head>
<body>
	<!-- GORNA BELKA -->
	<div class="navbar navbar-inverse">
		<div class="navbar-inner">
			<a class="brand" href="#">Poker Texas Hold'em</a>
			<ul class="nav">
				<li class="active" id="goLogin"><a href="#">Logowanie</a></li>
				<li id="goRegister"><a href="#">Rejestracja</a></li>
				<li id="goInfo"><a href="#">Informacje o grze...</a></li>
			</ul>
		</div>
	</div>

	<!-- LOGOWANIE -->
	<div id="loginForm">
		<div class="header"><h4>Logowanie</h4></div>
		<div class="body">
			<input type="text" id="inputLoginL" placeholder="Login">
			<input type="password" id="inputPasswordL" placeholder="Hasło">
			<button class="btn btn-primary" id="btnLogin">Zaloguj się</button>
		</div>
	</div>

	<!-- REJESTRACJA -->
	<div id="registerForm">
		<div class="header"><h4>Rejestracja</h4></div>
		<div class="body">
			<input type="text" id="inputLoginR" placeholder="Login">
			<input type="password" id="inputPasswordR" placeholder="Hasło">
			<input type="password" id="inputRetypePasswordR" placeholder="Powtórz hasło">
			<button class="btn btn-primary" id="btnRegister">Zarejestruj się</button>
		</div>
	</div>

	<!-- LISTA GIER -->
	<div id="gameList">
		<div class="header"><h4>Lista gier</h4></div>
		<div class="body">
			<div id="tableGameList">
				<table class="table">
					<thead>
						<tr>
							<th>Lp</th>
							<th>Nazwa</th>
							<th>Liczba graczy</th>
						</tr>
					</thead>
					<tbody>
						
					</tbody>
				</table>
			</div>
			<div id="createJoinButtons">
				<button class="btn btn-primary btn-small" id="createBtn">Nowa gra</button>
				<button class="btn btn-primary btn-small disabled" id="joinBtn">Dołącz</button>
			</div>
		</div>
	</div>

	<!-- INFO O GRZE -->
	<div id="about">
		<div class="header"><h4>Informacje o grze</h4></div>
		<div class="body">

		</div>
	</div>

	<!-- GRA -->
	<div id="game">
		<div class="header">
			<div id="headerRoomName"><h3 id="room">Nazwa pokoju</h3></div>
			<div id="headerPlayerInfo"><h3 id="nick">Nick</h3><img src="images/coins.png"><h3 id="coins">Coins</h3></div>
		</div>
		<div class="body">
			<div class="game">

			</div>

			<div id="chat">
				<div id="msgList">

				</div>
				<input type="text" placeholder="Napisz wiadomość do innych graczy..." id="msg">
			</div>

			<div id="action">
				<div class="row">
					<button id="czekaj" class="btn btn-info">Czekaj</button>
					<button id="sprawdz" class="btn btn-success">Sprawdź</button>
					<button id="allin" class="btn btn-warning">All-in</button>
				</div>
				<div class="row">
					<input id="inputPodbij"type="text">
					<button id="podbij" class="btn btn-primary">Podbij</button>
					<button id="pass" class="btn btn-inverse">Pass</button>
				</div>
				<div class="row">
					<button id="wyjdz" class="btn btn-mini btn-danger">Wyjdź z gry</button>
				</div>
			</div>
		</div>
	</div>

</body>
</html>